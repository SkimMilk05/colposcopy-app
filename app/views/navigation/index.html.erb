<div class="center-div">
   <h2> Welcome, <%= current_user.first_name %>!</h2>
</div>
<br/>


<!-- start page content-->
<div class="container">
   <div class="card-deck">
      <div class="card text-left w-60">
         <div class="row card-body">
            <div class="col-sm-8">
               <h5 class="card-title">Start a Practice Session</h5>
               <p class="card-text">Polish your procedure for Colposcopy through an online simulation with feedback</p>
            </div>
            <div class="col-sm-4">
               <%= image_tag("HeartAndMouse.png", style: "width:100%;") %>
            </div>
         </div>
         <div class="card-footer text-muted">
            <%= link_to "Practice", image_sets_path %>
         </div>
      </div>

      <div class="card text-left w-60">
         <div class="row card-body">
            <div class="col-sm-8">
               <h5 class="card-title">Go to the Glossary</h5>
               <p class="card-text">Study and learn the ASCCP Terminology for Colposcopic Practice through a web-based glossary</p>
            </div>
            <div class="col-sm-4">
               <%= image_tag("GlossaryIcon.png", style: "width:100%;") %>
            </div>
         </div>
         <div class="card-footer text-muted">
            <%= link_to "ASCCP Glossary", 'glossary' %>
         </div>
      </div>
   </div>

</div>


<br/>

<br/><br/>
<%= button_to 'TakePreTest', new_test_path, method: :get %>
<%= button_to('Take PostTest', tests_path, params: {user_id: current_user.id, pre_test: false, questions_correct: 0 }, method: :post, class:'')%>

<%= button_to 'TakePreSurvey', new_pre_survey_path, method: :get %>
