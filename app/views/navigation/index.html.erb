<!--Dashboard-->
<script type="text/javascript">
   function message() {
      if (<%= @first_time_user%>) {
         alert('Please take the initial survey and test first.');
      }
   };
</script>

<!--navbar-->
<nav class="navbar fixed-top navbar-expand-sm bg-light justify-content-between">
   <!--logo-->
   <div>
   <%= link_to(image_tag("LogoSmallNoWords.jpg", style: "width:27px"), signed_in_root_url) %> Col | Pract
   </div>

   <!-- Links -->
   <ul class="navbar-nav d-flex" id="navbar-item">

      <li class="nav-item dropdown">
         <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Signed in
         </a>
         <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item"><%= current_user.first_name %> <%=current_user.last_name %></a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item"><%= button_to "Sign out", sign_out_path, method: :delete, class: "invisible-button" %></a>
         </div>
      </li>
   </ul>
</nav>
<!--end nav bar-->



<!-- start page content-->
<div class="container">
   <div class="row mt-5">
      <div class="col-sm">
         <h3 class="text-center">Welcome, <%= current_user.first_name %>!</h3>
         <% if @first_time_user %>
         <p class="text-center" id="alert">Please take an initial survey and test to get started. <%= button_to 'Take Initial Survey >', new_pre_survey_path, method: :get%></p>
         <%end%>
         <p class="text-center" id="notice"><%= notice %></p>
      </div>
   </div>

   <div class="row mt-4 mb-5 p-2">
      <div class="col-sm">
         <div class="card-deck">
            <div class="card text-left w-60 ">
               <div class="card-body">
                  <div class="media">
                    <div class="media-body">
                      <h5 class="mt-0">Start a Practice Session</h5>
                      Polish your procedure for Colposcopy through an online simulation with feedback
                    </div>
                    <%= image_tag('HeartAndMouse.png', class: 'ml-2', style: "width:100px;") %>
                 </div>
               </div>
               <div class="card-footer text-muted" onclick="message();">
                  <%= link_to_if !(@first_time_user), "> Practice", image_sets_path %>
               </div>
            </div>

            <div class="card text-left w-60 ">
               <div class="card-body">
                  <div class="media">
                    <div class="media-body">
                      <h5 class="mt-0">Go to the Glossary</h5>
                      Study and learn the ASCCP Terminology for Colposcopic Practice through a web-based glossary
                    </div>
                    <%= image_tag('GlossaryIcon.png', class: 'mr-2', style: "width:90px;") %>
                 </div>
               </div>
               <div class="card-footer text-muted" onclick="message()">
                  <%= link_to_if !(@first_time_user), "> ASCCP Glossary", 'glossary' %>
               </div>
            </div>
         </div>
      </div>
   </div>

   <div class="row mt-5 mb-5">
   </div>

   <div class="row mt-5 mb-5">
   </div>

   <div class="row mt-5 mb-5">
   </div>

   <div class="row mt-3 mb-3">
   </div>


</div>


