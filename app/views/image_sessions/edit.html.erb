<h3>
<div id="feedback">
  Click on the Area to Biopsy
</div>
</h3>

<!--displaying the image-->
<%= form_with model: @image_session do |form| %>
<%= hidden_field_tag :colorlessWrong, @image_session.colorlessWrong + 1 %>
<%= form.button class: 'invisible-button' do %>
<%= image_tag(@image.img_url, usemap: "#map", id: "image", onclick: "colorlessClicked()")%>
<%end%>
<%end%>

<div class="green_area-field">
  <!-- map for image -->
  <map name="map">
    <!-- conditionals to count wrong and right -->
    <% @image.green_areas.each do |green_area| %>
          <%= form_with model: @image_session do |form| %>
          <%= hidden_field_tag :greenRight, @image_session.greenRight + 1 %>
          <%= hidden_field_tag :greenLeft, @image_session.greenLeft - 1 %>
          <%= form.button data: {disable: true}, class: 'hide' do %>
            <area shape="rect" coords="<%= green_area.coordinates%>" alt="green area" onclick="greenClicked()">
          <%end%>
        <%end%>
    <% end %>
  </map>
</div>

  <div class="blue_area-field">
    <%= form_with model: @image_session do |form| %>
      <% if @image_session.greenLeft > 0 %>
        <%= hidden_field_tag :blueWrong, @image_session.blueWrong + 1 %>
      <%else%>
        <%= hidden_field_tag :blueRight, @image_session.blueRight + 1 %>
      <%end%>
      <%= form.button data: {disable: true}, class: 'hide' do %>
        <button onclick="blueClicked()">ECC</button>
      <%end%>
    <%end%>
  </div>




<!--button to move on. Scores record as they go-->
<%= button_to("Complete Biopsy", image_session_path, method: :get) %>



<%= link_to 'Back', image_sets_path %>

<script type="text/javascript">
  imageMapResize(); //rescale image-map
</script>
