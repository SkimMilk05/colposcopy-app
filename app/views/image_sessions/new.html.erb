   </div>
   <div class="row">
      <!--displaying the image-->
      <%= image_tag(@image.img_url, usemap: "#map", id: "image")%>

      <div class="green_area-field">
        <!-- map for image -->
        <map name="map">
         <% @image.green_areas.each do |green_area| %>
            <area shape="circle" coords="0,0,1000" alt="green area" onclick="greenClicked()">
         <%end%>
        </map>
      </div>

      <div class="form-inline justify-content-between">
         <div class="blue_area-field">
            <button onclick="blueClicked()">ECC Requested</button>
          </div>
      <!--button to move on. Scores record as they go-->
      </div>
   </div>
</div>



