    <nav class="navbar fixed-top navbar-expand-sm bg-light justify-content-between">
      <!--logo-->
      <div>
      <%= link_to(image_tag("LogoSmallNoWords.jpg", style: "width:27px"), general_path_url) %> Col | Pract
