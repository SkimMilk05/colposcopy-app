<p id="notice"><%= notice %></p>

<h1>Image Sets</h1>


<div id="carousel" class="carousel slide" data-ride="false" data-interval="false" data-wrap="false">
  <div class="carousel-inner">
    <% @image_sets.each do |image_set| %>  <!-- shuffle function randomizes order -->
    <!-- first item must be active-->
    <% if image_set == @image_sets.first() %>
      <div class="carousel-item active">
    <%else%>
      <div class="carousel-item">
    <%end%> <!--end conditionals -->
            <% @images = image_set.images %>
            <%= image_tag(@images[0].img_url, class: 'd-block w-50 mx-auto') %>
            <%= button_to('Biopsy on Green with acetowhite', image_sessions_path, params: {user_id: current_user.id, image_id: @images[1].id, greenRight: 0, blueRight: 0, greenWrong: 0, blueWrong:0, colorlessWrong: 0, greenLeft: @images[2].green_areas.length(), blueLeft: @images[2].blue_areas.length()}, method: :post, class:'btn-block')%>
            <%= button_to('Biopsy on Acetowhite', image_sessions_path, params: {user_id: current_user.id, image_id: @images[2].id, greenRight: 0, blueRight: 0, greenWrong: 0, blueWrong:0, colorlessWrong: 0, greenLeft: @images[1].green_areas.length(), blueLeft: @images[1].blue_areas.length()}, method: :post, class:'btn-block')%>
          <!-- button to create/start image_session -->
      </div>
      <% end %> <!-- end loop -->
    </div>

    <!--controls-->
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<br/>
<%= link_to 'Exit Practice', signed_in_root_url, class: 'float-right' %>
